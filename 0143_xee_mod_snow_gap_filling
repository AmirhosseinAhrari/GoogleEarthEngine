import ee
import geemap
!pip install xee
import xee
import xarray as xr

ee.Authenticate()
ee.Initialize(
    project = 'ee-amirhosseinahrari',
    opt_url = 'https://earthengine-highvolume.googleapis.com'
)

map = geemap.Map(basemap = 'SATELLITE')
map

roi = map.draw_last_feature.geometry()

roi

mod = (
    ee.ImageCollection("MODIS/061/MOD10A1")
    .filterDate('2020','2021')
    .select('NDSI_Snow_Cover')
)

mod

ds = xr.open_dataset(
    mod,
    engine = 'ee',
    crs = 'EPSG:4326',
    geometry = roi,
    scale = 0.01
)

ds

ds.sel(time = ds.time.dt.month == 1).NDSI_Snow_Cover.plot(
    x = 'lon',
    y = 'lat',
    col = 'time',
    col_wrap = 7,
    robust = True
)

ds_rolling = ds.rolling(time = 10, center = True, min_periods = 1).median('time')

ds_fill = ds.fillna(ds_rolling)

ds_fill.sel(time = ds_rolling.time.dt.month == 1).NDSI_Snow_Cover.plot(
    x = 'lon',
    y = 'lat',
    col = 'time',
    col_wrap = 7,
    robust = True
)

!pip install netCDF4
import netCDF4

ds_fill.to_netcdf('snow_cover.nc')
